<%- include('partials/logged-in-header') -%>
<div class="container card-container">
  <h1>My Patients</h1>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% for(var i=0; i<posts.length; i++) {%>
      <div class="col">
        <div class="card h-100">
           <img src="<%= posts[i].image%>" class="card-img-top" alt="...">
          
          <div class="card-body">
            <h5 class="card-title"><%= posts[i].patientName %> </h5>
            <p class="card-text"><medium><h9>Dx:</h9> <%= posts[i].diagnosis%></small></p>
            <p class="card-text"><medium><h9>Location:</h9> <%= posts[i].locationAddress%></small></p>         
          </div>
          <a href="/post/<%= posts[i]._id%>" class="btn btn-outline-primary">View Patient</a>        
      </div>  
    </div>
      <% } %>
    </div>
  </div>
<%- include('partials/footer') -%>